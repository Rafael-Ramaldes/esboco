<%- include('partials/header', { usuario }) %>
<div class="container-fluid px-4 py-3">
    <!-- Destaques -->
    <h2 class="text-white mb-3">Destaques</h2>
    <div class="row flex-nowrap overflow-auto mb-5 pb-3 destaque-row">
        <% filmesDestaque.forEach(filme => { %>
            <div class="col-md-3 col-lg-2 col-6">
                <div class="card bg-transparent border-0">
                    <img src="/images/<%= filme.capa %>" class="card-img-top filme-capa" alt="<%= filme.titulo %>">
                    <div class="card-body p-0 mt-2">
                        <h6 class="card-title text-white"><%= filme.titulo %></h6>
                        <a href="/filmes/<%= filme.id %>" class="btn btn-sm btn-outline-info mt-1">Detalhes</a>
                        <button class="btn btn-sm <%= usuario.favoritos && usuario.favoritos.includes(filme.id) ? 'btn-warning' : 'btn-outline-warning' %> mt-1 favorito-btn" 
                                data-filme-id="<%= filme.id %>">
                            <%= usuario.favoritos && usuario.favoritos.includes(filme.id) ? '★' : '☆' %>
                        </button>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

    <!-- Filmes por gênero -->
    <% generos.forEach(genero => { %>
        <h2 class="text-white mb-3"><%= genero %></h2>
        <div class="row flex-nowrap overflow-auto mb-5 pb-3 genero-row">
            <% filmes.filter(f => f.genero === genero).forEach(filme => { %>
                <div class="col-md-3 col-lg-2 col-6">
                    <div class="card bg-transparent border-0">
                        <img src="/images/<%= filme.capa %>" class="card-img-top filme-capa" alt="<%= filme.titulo %>">
                        <div class="card-body p-0 mt-2">
                            <h6 class="card-title text-white"><%= filme.titulo %></h6>
                            <a href="/filmes/<%= filme.id %>" class="btn btn-sm btn-outline-info mt-1">Detalhes</a>
                            <button class="btn btn-sm <%= usuario.favoritos && usuario.favoritos.includes(filme.id) ? 'btn-warning' : 'btn-outline-warning' %> mt-1 favorito-btn" 
                                    data-filme-id="<%= filme.id %>">
                                <%= usuario.favoritos && usuario.favoritos.includes(filme.id) ? '★' : '☆' %>
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% }) %>
</div>
<%- include('partials/footer') %>