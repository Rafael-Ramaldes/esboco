<%- include('partials/header', { usuario }) %>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <img src="/images/<%= filme.capa %>" class="img-fluid rounded" alt="<%= filme.titulo %>">
        </div>
        <div class="col-md-8 text-white">
            <h1><%= filme.titulo %></h1>
            <p><strong>Gênero:</strong> <%= filme.genero %></p>
            <p><strong>Ano:</strong> <%= filme.ano %></p>
            <h3 class="mt-4">Sinopse</h3>
            <p><%= filme.sinopse %></p>
            <div class="mt-4">
                <button class="btn <%= usuario.favoritos && usuario.favoritos.includes(filme.id) ? 'btn-warning' : 'btn-outline-warning' %> favorito-btn" 
                        data-filme-id="<%= filme.id %>">
                    <%= usuario.favoritos && usuario.favoritos.includes(filme.id) ? '★ Remover dos Favoritos' : '☆ Adicionar aos Favoritos' %>
                </button>
                <a href="/filmes" class="btn btn-outline-light ms-2">Voltar</a>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>